<% if @answer.errors.present? %>
  <% @answer.errors.full_messages.each do |message| %>
	  $('#answer-block-<%=@answer.id%> .answer-errors').append('<%= j message %>');
  <% end %>
<% else %>
	$('#answer-block-<%=@answer.id%>').replaceWith('<%= j render partial: 'answer', object: @answer %>');
  $('.edit-answer-link').click(function(e) {
      e.preventDefault();
      $(this).hide();
      answer_id = $(this).data('answerId');
      $('form#edit-answer-' + answer_id).show();
  });
<% end %>
