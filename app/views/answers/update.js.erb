<% if @answer.errors.present? %>
  <% @answer.errors.full_messages.each do |message| %>
	  $('#answer-block-<%=@answer.id%> .answer-errors').append('<%= j message %>');
  <% end %>
<% else %>
  <% if remotipart_submitted? %>
    $('#answer-block-<%=@answer.id%>').replaceWith('<%= j "#{render @answer}" %>');
  <%else%>
    $('#answer-block-<%=@answer.id%>').replaceWith('<%= j render @answer %>');
  <%end%>
<% end %>
